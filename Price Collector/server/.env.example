# MySQL Database Configuration
# Copy this file to .env and fill in your actual database credentials

# Database Host (e.g., localhost, 127.0.0.1, or your server IP)
DB_HOST=localhost

# Database Port (default MySQL port is 3306)
DB_PORT=3306

# Database Name
DB_NAME=price_collector

# Database User
DB_USER=your_username

# Database Password
DB_PASSWORD=your_password

# Server Configuration
# Port for the API server to run on
SERVER_PORT=3000

# API Key for authentication (generate a random string)
# This prevents unauthorized access to your database
API_KEY=your_secret_api_key_here

# CORS Configuration (optional)
# Comma-separated list of allowed origins, or * for all
# Example: chrome-extension://your-extension-id
ALLOWED_ORIGINS=*

# SSL/TLS Configuration (optional, for secure connections)
# Set to true if your MySQL server requires SSL
DB_SSL=false

# Connection Pool Settings (optional)
# Maximum number of connections in pool
DB_CONNECTION_LIMIT=10

# Timezone for timestamps
DB_TIMEZONE=UTC
